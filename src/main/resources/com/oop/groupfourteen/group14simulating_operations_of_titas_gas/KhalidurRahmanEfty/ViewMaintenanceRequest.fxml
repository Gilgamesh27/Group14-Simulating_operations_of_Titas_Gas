<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.KhalidurRahmanEfty.ViewMaintenanceRequest">
    <children>
        <Label text="View Maintenance Request">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="adjustmentRequestsTable" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="requestIdColumn" prefWidth="80.0" text="Request ID" />
                <TableColumn fx:id="zoneColumn" prefWidth="100.0" text="Area" />
                <TableColumn fx:id="currentRateColumn" prefWidth="120.0" text="Type" />
                <TableColumn fx:id="requestedRateColumn" prefWidth="120.0" text="Time" />
                <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TableView>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Button fx:id="viewAdjustmentButton" onAction="#handleViewAdjustment" text="View Details" />
                <Button fx:id="approveButton" onAction="#handleApproveChanges" text="Back" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </HBox>

        <TextArea fx:id="confirmationArea" editable="false" prefHeight="80.0" promptText="Details will appear here..." wrapText="true">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </TextArea>
    </children>
</VBox>
