<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.ManageGasPressureLevelsController">
   <children>
      <Label text="Manage Gas Pressure Levels">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Pipeline:" />
            <ComboBox fx:id="pipelineComboBox" prefWidth="200.0" promptText="Select Pipeline" GridPane.columnIndex="1" />
            
            <Label text="Current Pressure:" GridPane.rowIndex="1" />
            <Label fx:id="currentPressureLabel" text="Loading..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="New Pressure Level:" GridPane.rowIndex="2" />
            <TextField fx:id="pressureLevelField" promptText="Enter pressure level (PSI)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="setPressureButton" onAction="#handleSetPressureLevel" text="Set Pressure Level" />
            <Button fx:id="submitButton" onAction="#handleSubmit" text="Submit" />
            <Button fx:id="resetButton" onAction="#handleReset" text="Reset" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TableView fx:id="pipelineStatusTable" prefHeight="150.0">
         <columns>
            <TableColumn fx:id="pipelineIdColumn" prefWidth="100.0" text="Pipeline ID" />
            <TableColumn fx:id="currentPressureColumn" prefWidth="120.0" text="Current Pressure" />
            <TableColumn fx:id="targetPressureColumn" prefWidth="120.0" text="Target Pressure" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
      
      <TextArea fx:id="confirmationArea" editable="false" prefHeight="80.0" promptText="Pressure update confirmation will appear here..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
   </children>
</VBox>