<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.ApproveSupplyAdjustmentsController">
   <children>
      <Label text="Approve Supply Adjustments">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <TableView fx:id="adjustmentRequestsTable" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="requestIdColumn" prefWidth="80.0" text="Request ID" />
            <TableColumn fx:id="zoneColumn" prefWidth="100.0" text="Zone" />
            <TableColumn fx:id="currentRateColumn" prefWidth="120.0" text="Current Rate" />
            <TableColumn fx:id="requestedRateColumn" prefWidth="120.0" text="Requested Rate" />
            <TableColumn fx:id="reasonColumn" prefWidth="150.0" text="Reason" />
            <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Selected Request:" />
            <Label fx:id="selectedRequestLabel" text="None selected" GridPane.columnIndex="1" />
            
            <Label text="Approval Comments:" GridPane.rowIndex="1" />
            <TextField fx:id="commentsField" promptText="Enter approval comments" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="viewAdjustmentButton" onAction="#handleViewAdjustment" text="View Adjustment" />
            <Button fx:id="approveButton" onAction="#handleApproveChanges" text="Approve Changes" />
            <Button fx:id="submitButton" onAction="#handleSubmitApproval" text="Submit Approval" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TextArea fx:id="confirmationArea" editable="false" prefHeight="80.0" promptText="Confirmation will appear here..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
   </children>
</VBox>