<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.ViewUsageStatisticsController">
   <children>
      <Label text="View Usage Statistics">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>

      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Date Range From:" />
            <DatePicker fx:id="fromDatePicker" GridPane.columnIndex="1" />

            <Label text="Date Range To:" GridPane.rowIndex="1" />
            <DatePicker fx:id="toDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>

      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="fetchDataButton" onAction="#handleFetchData" text="Fetch Data" />
            <Button fx:id="viewStatisticsButton" onAction="#handleViewStatistics" text="View Statistics" />
            <Button fx:id="viewChartsButton" onAction="#handleViewCharts" text="View Charts" />
            <Button fx:id="downloadReportButton" onAction="#handleDownloadReport" text="Download Report" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>

      <TableView fx:id="usageStatisticsTable" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="zoneColumn" prefWidth="100.0" text="Zone" />
            <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="usageRateColumn" prefWidth="120.0" text="Usage Rate (m続/hr)" />
            <TableColumn fx:id="totalUsageColumn" prefWidth="120.0" text="Total Usage (m続)" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>

      <HBox spacing="20.0">
         <children>
            <Label fx:id="averageUsageLabel" text="Average Usage: 0 m続/hr">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="peakUsageLabel" text="Peak Usage: 0 m続/hr">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>