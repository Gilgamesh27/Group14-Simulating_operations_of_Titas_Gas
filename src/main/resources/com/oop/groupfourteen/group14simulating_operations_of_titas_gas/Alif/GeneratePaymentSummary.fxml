<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.GeneratePaymentSummaryController">
   <children>
      <Label text="Generate Payment Summary">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Date Range From:" />
            <DatePicker fx:id="fromDatePicker" GridPane.columnIndex="1" />
            
            <Label text="Date Range To:" GridPane.rowIndex="1" />
            <DatePicker fx:id="toDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="fetchDataButton" onAction="#handleFetchData" text="Fetch Data" />
            <Button fx:id="viewSummaryButton" onAction="#handleViewSummary" text="View Summary" />
            <Button fx:id="downloadReportButton" onAction="#handleDownloadReport" text="Download Report" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TableView fx:id="paymentSummaryTable" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="customerIdColumn" prefWidth="100.0" text="Customer ID" />
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
            <TableColumn fx:id="paymentMethodColumn" prefWidth="100.0" text="Payment Method" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
      
      <Label fx:id="totalAmountLabel" text="Total Amount: $0.00">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>