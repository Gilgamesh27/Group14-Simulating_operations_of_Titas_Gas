<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.SuspendGasSupplyController">
   <children>
      <Label text="Suspend Gas Supply in Emergencies">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Zone:" />
            <ComboBox fx:id="zoneComboBox" prefWidth="200.0" promptText="Select Zone" GridPane.columnIndex="1" />
            
            <Label text="Emergency Type:" GridPane.rowIndex="1" />
            <ComboBox fx:id="emergencyTypeComboBox" prefWidth="200.0" promptText="Select Emergency Type" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Suspension Reason:" GridPane.rowIndex="2" />
            <TextField fx:id="suspensionReasonField" promptText="Enter suspension reason" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="confirmSuspensionButton" onAction="#handleConfirmSuspension" text="Confirm Suspension" />
            <Button fx:id="submitButton" onAction="#handleSubmitSuspension" text="Submit Suspension" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TextArea fx:id="emergencyDetailsArea" prefHeight="100.0" promptText="Emergency details..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      
      <TableView fx:id="teamsTable" prefHeight="120.0">
         <columns>
            <TableColumn fx:id="teamIdColumn" prefWidth="100.0" text="Team ID" />
            <TableColumn fx:id="teamNameColumn" prefWidth="150.0" text="Team Name" />
            <TableColumn fx:id="contactColumn" prefWidth="120.0" text="Contact" />
            <TableColumn fx:id="notificationStatusColumn" prefWidth="120.0" text="Notification Status" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
      
      <Button fx:id="notifyTeamsButton" onAction="#handleNotifyTeams" text="Notify Teams">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>