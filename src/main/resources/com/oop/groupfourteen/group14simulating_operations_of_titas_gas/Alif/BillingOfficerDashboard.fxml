<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.BillingOfficerDashboardController" prefWidth="1200" prefHeight="800" style="-fx-background-color: #ecf0f1;">
    
    <top>
        <HBox style="-fx-background-color: #3498db; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="20">
            <Label text="Titas Gas - Billing and Metering Officer Dashboard" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="userInfoLabel" text="Welcome, Billing and Metering Officer" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="signoutButton" text="Sign Out" onAction="#handleSignOut" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 8 16;" />
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <VBox spacing="20" style="-fx-padding: 20;">
                
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Meter Management" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <HBox spacing="15">
                        <Button text="Record Meter Readings" onAction="#openRecordMeterReadings" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                        <Button text="Update Meter Records" onAction="#openUpdateMeterRecords" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                    </HBox>
                </VBox>
                
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Billing Operations" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <HBox spacing="15">
                        <Button text="Generate Monthly Bills" onAction="#openGenerateMonthlyBills" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                        <Button text="Handle Billing Errors" onAction="#openHandleBillingErrors" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                        <Button text="Issue Final Bill" onAction="#openIssueFinalBill" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                    </HBox>
                </VBox>
                
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Payment and Refunds" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <HBox spacing="15">
                        <Button text="Generate Payment Summary" onAction="#openGeneratePaymentSummary" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                        <Button text="Process Refunds" onAction="#openProcessRefunds" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                    </HBox>
                </VBox>
                
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <Label text="Discount Management" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <HBox spacing="15">
                        <Button text="Approve Discount Adjustments" onAction="#openApproveDiscountAdjustments" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="200" />
                    </HBox>
                </VBox>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>