<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.AdjustSupplyEmergencyController">
   <children>
      <Label text="Adjust Supply in Emergency">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Affected Zone:" />
            <ComboBox fx:id="affectedZoneComboBox" prefWidth="200.0" promptText="Select Affected Zone" GridPane.columnIndex="1" />
            
            <Label text="Emergency Rate:" GridPane.rowIndex="1" />
            <TextField fx:id="emergencyRateField" promptText="Enter emergency rate (mÂ³/hr)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Emergency Type:" GridPane.rowIndex="2" />
            <ComboBox fx:id="emergencyTypeComboBox" prefWidth="200.0" promptText="Select Emergency Type" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="setRateButton" onAction="#handleSetEmergencyRate" text="Set Emergency Rate" />
            <Button fx:id="submitButton" onAction="#handleSubmitChanges" text="Submit Changes" />
            <Button fx:id="resetButton" onAction="#handleReset" text="Reset" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TextArea fx:id="emergencyDetailsArea" prefHeight="100.0" promptText="Emergency details..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      
      <TextArea fx:id="updateArea" editable="false" prefHeight="80.0" promptText="Update confirmation will appear here..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
   </children>
</VBox>