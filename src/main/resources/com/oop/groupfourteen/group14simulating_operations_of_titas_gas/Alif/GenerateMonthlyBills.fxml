<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.GenerateMonthlyBillsController">
   <children>
      <Label text="Generate Monthly Bills">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Billing Cycle:" />
            <ComboBox fx:id="billingCycleComboBox" prefWidth="200.0" promptText="Select Billing Cycle" GridPane.columnIndex="1" />
            
            <Label text="Month/Year:" GridPane.rowIndex="1" />
            <DatePicker fx:id="monthYearPicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="calculateButton" onAction="#handleCalculateBills" text="Calculate Bills" />
            <Button fx:id="reviewButton" onAction="#handleReviewBills" text="Review Bills" />
            <Button fx:id="confirmButton" onAction="#handleConfirmGeneration" text="Confirm Generation" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TableView fx:id="billsTableView" prefHeight="200.0">
         <columns>
            <TableColumn fx:id="customerColumn" prefWidth="100.0" text="Customer ID" />
            <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
         </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>