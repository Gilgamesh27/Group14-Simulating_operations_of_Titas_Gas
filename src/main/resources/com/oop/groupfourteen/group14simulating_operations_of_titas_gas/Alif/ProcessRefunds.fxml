<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.Alif.ProcessRefundsController">
   <children>
      <Label text="Process Refunds">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Refund Request:" />
            <ComboBox fx:id="refundRequestComboBox" prefWidth="200.0" promptText="Select Refund Request" GridPane.columnIndex="1" />
            
            <Label text="Refund Amount:" GridPane.rowIndex="1" />
            <TextField fx:id="refundAmountField" promptText="Enter refund amount" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Reason:" GridPane.rowIndex="2" />
            <TextField fx:id="reasonField" promptText="Enter reason for refund" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </GridPane>
      
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="validateButton" onAction="#handleValidateRequest" text="Validate Request" />
            <Button fx:id="processButton" onAction="#handleProcessRefund" text="Process Refund" />
            <Button fx:id="confirmButton" onAction="#handleConfirmRefund" text="Confirm Refund" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <TextArea fx:id="validationArea" editable="false" prefHeight="80.0" promptText="Validation results will appear here..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
      
      <TextArea fx:id="confirmationArea" editable="false" prefHeight="80.0" promptText="Confirmation will appear here..." wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextArea>
   </children>
</VBox>