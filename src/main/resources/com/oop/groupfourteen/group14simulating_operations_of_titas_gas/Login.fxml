<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupfourteen.group14simulating_operations_of_titas_gas.LoginController"
            prefWidth="450"
            prefHeight="500" style="-fx-background-color: #f0f4f8;">
    <children>
        <Label layoutX="150" layoutY="20" text="Titas Gas Login"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label layoutX="50" layoutY="80" text="User ID:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <TextField fx:id="userIdField" layoutX="150" layoutY="75" prefWidth="250" promptText="Enter 6-8 digit User ID"
                   style="-fx-background-radius: 6; -fx-padding: 8;"/>
        <Label layoutX="50" layoutY="130" text="Password:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="125" prefWidth="250" promptText="Enter password"
                       style="-fx-background-radius: 6; -fx-padding: 8;"/>
        <Button fx:id="loginButton" layoutX="150" layoutY="180" text="Login" onAction="#handleLogin"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10; -fx-font-weight: bold;"
                prefWidth="100"/>
        <Button fx:id="forgotPasswordButton" layoutX="260" layoutY="180" text="Forgot Password"
                onAction="#handleForgotPassword"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10; -fx-font-weight: bold;"
                prefWidth="140"/>
        <Button fx:id="createAccountButton" layoutX="150" layoutY="220" text="Create New Account"
                onAction="#handleCreateAccount"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10; -fx-font-weight: bold;"
                prefWidth="250"/>
        <Label fx:id="infoLabel" layoutX="150" layoutY="270" text=""
               style="-fx-text-fill: #e74c3c; -fx-font-style: italic; -fx-font-size: 12px;" prefWidth="250"
               wrapText="true"/>
        <VBox layoutX="50" layoutY="320" spacing="5"
              style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 8;">
            <Label text="Test Credentials:"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label text="Billing Officer: ID=123456, Password=Billing@123"
                   style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
            <Label text="Gas Supply Controller: ID=789012, Password=GasSupply@123"
                   style="-fx-font-size: 11px; -fx-text-fill: #7f8c8d;"/>
        </VBox>
    </children>
</AnchorPane>
